# Production Dockerfile for PitchAI Monitoring System
FROM python:3.12-slim

# Set working directory
WORKDIR /app

# Install system dependencies for Playwright and Docker
RUN apt-get update && apt-get install -y \
    curl \
    wget \
    gnupg \
    ca-certificates \
    && rm -rf /var/lib/apt/lists/*

# Install UV package manager
RUN pip install uv

# Copy project files
COPY pyproject.toml uv.lock ./
COPY monitoring/ ./monitoring/
COPY config/ ./config/
COPY tests/ ./tests/
COPY scripts/ ./scripts/
COPY main.py ./

# Install dependencies
RUN uv sync --frozen

# Install Playwright browsers
RUN uv run playwright install --with-deps chromium

# Create directories for monitoring data
RUN mkdir -p reports logs incidents

# Set up cron for daily monitoring (runs at 6 AM)
RUN apt-get update && apt-get install -y cron && rm -rf /var/lib/apt/lists/*
COPY <<EOF /etc/cron.d/daily-monitoring
0 6 * * * root cd /app && /usr/local/bin/uv run python scripts/daily_ai_monitoring.py >> /var/log/monitoring.log 2>&1
EOF

RUN chmod 0644 /etc/cron.d/daily-monitoring
RUN crontab /etc/cron.d/daily-monitoring

# Create startup script that starts both web server and cron
COPY <<EOF /app/start-monitoring.sh
#!/bin/bash
set -e

# Start cron daemon in background
cron

# Log startup
echo "🤖 PitchAI Monitoring System starting..."
echo "📍 Environment: production"
echo "🌐 Target: monitoring.pitchai.net"
echo "⏰ Daily monitoring: 06:00 UTC"
echo "📊 Web API: http://0.0.0.0:8000"

# Start the web server (foreground)
exec uv run python main.py
EOF

RUN chmod +x /app/start-monitoring.sh

# Environment variables for production
ENV PYTHONPATH=/app
ENV PYTHONUNBUFFERED=1
ENV PRODUCTION_URL=https://monitoring.pitchai.net

# Health check endpoint
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:8000/status || exit 1

# Expose port
EXPOSE 8000

# Create non-root user for security
RUN useradd -r -s /bin/false monitoring
RUN chown -R monitoring:monitoring /app
USER monitoring

# Start the monitoring system
CMD ["/app/start-monitoring.sh"]